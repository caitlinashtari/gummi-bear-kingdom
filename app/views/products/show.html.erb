<% content_for(:navbar) do %>
  <ul class="right">
    <li><%= link_to "Products", products_path %></li>
  </ul>
<% end %>


<h1>Product: <%= @product.name %></h1>
<h3>Cost: $<%= @product.cost %>/pound</h3>
<h4>Ships From: <%= @product.country %></h4>
<h5>Interests: <%= @product.interests %></h5>

<p><%= link_to "Edit", edit_product_path(@product) %> | <%= link_to "Delete", product_path(@product),
                         :data => {:confirm => "WHYYYYYY?!",
                                   :method => "delete"} %></p>
